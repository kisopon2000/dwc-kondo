 <h2>Users</h2>
    <table class="table table-hover table-inverse">
      <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3">opinion</th>
      </tr>
      </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= link_to image_tag('no_image.jpg'), user_path(book.user.id)%></td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>