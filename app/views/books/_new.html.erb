<% if @book.errors.any? %>
<div class ="alert">
  <%= @book.errors.count %>件のエラーが見つかりました。
    <% @book.errors.full_messages.each do |message| %>
      <p><%= message %></p>
    <% end %>
</div>
<% end %>

<h1>User Info</h1>
  <%= attachment_image_tag @userr, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
  <p>name:<%= userr.name %></p>
  <p>introduction:<%= userr.introduction %></p>


  <% if @userr.id == current_user.id %>
    <p><%= link_to "Profile_edit", edit_user_path(@userr) %></p>
  <% end %>


<h1>NewBook</h1>
  <%= form_with model: @book, url: books_path, local:true do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
      <%= f.submit 'submit' %>
  <% end %>