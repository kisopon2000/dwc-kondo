<div class="container px-5 px-sm-0">
  <div class="row">

    <div class="col-md-3">
      <%= render 'books/new', userr: @userr, book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
    <table class="table table-hover table-inverse">
        <tbody>
            <tr>

              <td><%= link_to image_tag('no_image.jpg'), user_path(@book_detail.user.id)%>
              <br><%= link_to @book_detail.user.name, user_path(@book_detail.user.id) %></td>
              <td><%= @book_detail.title %></td>
              <td><%= @book_detail.body %></td>


              <% if @book_detail.user_id == current_user.id %>
                <td><p><%= link_to "EDIT", edit_book_path(@book_detail), {class: "EDIT-button"} %></p></td>
                <td><p><%= link_to "DELETE", book_path(@book_detail.id), method: :delete, "data-confirm" => "Are you sure?", class: "DELETE-button" %></p></td>
              <% end %>
              </td>

            </tr>
        </tbody>
      </table>
    </div>

  </div>
</div>